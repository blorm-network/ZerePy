        "detect-breaches",
        "calculate-severity",
        "trigger-alerts",
        "record-on-blockchain",
        "initiate-corrective-actions",
        "update-quality-impact"
      ]
    },
    {
      "name": "predict-demand",
      "weight": 4,
      "description": "Advanced demand forecasting for fresh produce",
      "subtasks": [
        "analyze-historical-data",
        "evaluate-seasonal-factors",
        "assess-weather-impact",
        "track-local-events",
        "calculate-confidence-intervals",
        "adjust-inventory-levels"
      ]
    },
    {
      "name": "optimize-routes",
