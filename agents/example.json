  "optimization_parameters": {
    "temperature_control": {
      "monitoring_interval": 300,
      "breach_threshold_duration": 900,
      "zones": {
        "frozen": {
          "min": -23.0,
          "max": -18.0
        },
        "chilled": {
          "min": 2.0,
          "max": 6.0
        },
        "produce": {
          "min": 4.0,
          "max": 8.0
        }
      }
    },
    "route": {
      "max_stops": 12,
      "max_duration": 480,
      "temperature_variance": 1.5,
      "priority_weight": 3,
      "last_mile_constraints": {
        "time_windows": true,
        "temperature_zones": true,
        "traffic_patterns": true,
        "delivery_priorities": true
      }
    },
    "shelf_life": {
      "calculation_factors": [
        "base_shelf_life",
        "temperature_history",
        "humidity_exposure",
        "handling_events",
        "transport_conditions"
      ],
      "quality_thresholds": {
        "premium": 90,
        "standard": 80,
        "minimum": 70
      }
    },
    "demand_forecasting": {
      "historical_data_range": 90,
      "seasonal_patterns": true,
      "weather_impact": true,
      "local_events": true,
      "confidence_levels": {
        "high": 90,
        "medium": 80,
        "low": 70
      }
    }
  },
  "smart_contract_parameters": {
    "default_stake": 1000,
    "quality_threshold": 85,
    "payment_delay": 24,
    "dispute_window": 48,
    "compliance_requirements": {
      "temperature_logging": true,
      "location_tracking": true,
      "quality_verification": true,
      "delivery_confirmation": true
    },
    "penalty_rates": {
      "temperature_breach": 0.1,
      "late_delivery": 0.05,
      "quality_failure": 0.15
    },
    "incentive_rates": {
      "early_delivery": 0.05,
      "perfect_temperature": 0.08,
      "high_quality": 0.1
    }
  }
